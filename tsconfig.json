{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",  // Changed to 'commonjs' to match the typical Node.js setup
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}